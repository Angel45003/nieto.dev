    />

    <CardProjects
      Title="Plants Clone"
      Description="My Website Plants using HTML and CSS3"
      FrameWorkUsage="#html + #css"
      Image="../../public/images/project_plants.png"
      GithubLink="https://github.com/Angel45003/cactus-landing"
      AltImg="Proyecto landing page de Cactus"
    />
  </div>
</div>
